extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mb-2= pagina
        include ./layout/bloque_testimoniales
        
        .row 
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial
                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.mensaje
            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales", method="POST")
                        .form-group 
                            label(for="nombre") Nombre
                            input#nombre(type="text", value=nombre ,placeholder="Ingresa tu Nombre", name="nombre", class="form-control")
                        .form-group 
                            label(for="correo") Correo Electr√≥nico
                            input#correo(type="text", value=correo ,placeholder="Ingresa tu Correo", name="correo", class="form-control")
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(placeholder="Ingresa tu Mensaje", class="form-control", name="mensaje", rows=3)= mensaje
                        input.btn.btn-success.btn-block.mb-5(type="submit", value="Enviar")